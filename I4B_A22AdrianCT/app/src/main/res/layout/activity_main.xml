<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escribe aquí"/>

        <Button
            android:id="@+id/btnEngadir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Engadir"
            android:gravity="center_horizontal"
            android:onClick="onBtnEngadirClick"/>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="Aquí verás os elementos escollidos"
            android:layout_margin="15dp"
            android:textColorHighlight="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnShowDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Dialog"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="5dp"
                android:onClick="onBtnShowDialogClick"/>

            <Button
                android:id="@+id/btnDialogFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dialog Fragment"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="5dp"
                android:onClick="onBtnDialogFragmentClick"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>