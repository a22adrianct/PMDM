<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnStartThread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empezar Thread"
            android:layout_margin="2dp"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/btnStopThread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parar Thread"
            android:layout_margin="2dp"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvThread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <Button
            android:id="@+id/btnStartAsync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empezar AsyncTask"
            android:layout_margin="2dp"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/btnStopAsync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parar AsyncTask"
            android:layout_margin="2dp"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvAsync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</LinearLayout>